<div id="login-div">
    <h1>Log in or Register</h1>

<p id="notice"><%= notice %></p>

<%= form_tag sessions_path, :role => "form" do %>
    <div class="form-group">
        <%= label_tag 'Email or Username' %><br />
        <%= text_field_tag 'login_id', nil, :class => "form-control" %>
    </div>
    <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, :class => 'form-control' %>
    </div>
    <div class="form-group">
        <%= submit_tag "Log in", :class => 'btn btn-default' %>
        <%= link_to 'Register', register_path, :role => 'button', :class => 'btn btn-default' %>
    </div>
    <% end %>
</div>
