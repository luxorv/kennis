<div>Log in</h1>

    <%= form_tag sessions_path do %>
        <p>
            <%= label_tag 'Email or Username' %><br />
            <%= text_field_tag 'i' %>
        </p>
        <p>
            <%= label_tag :password %><br />
            <%= password_field_tag :password %>
        </p>
        <div class="button"><%= submit_tag "Log in" %></div>
        <% end %>
    </p>
</div>
