<div id="regis-div">
<h1>Register</h1>

<%= form_for @user, url: register_path, :role => 'form' do |f| %>
    <% if @user.errors.any? %>
        <div class="error_messages">
            <h2>Form is invalid</h2>
            <ul>
                <% for message in @user.errors.full_messages %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="form-group">
        <%= f.label :name, nil, :class => 'lead' %>
        <%= f.text_field :name, :class => 'form-control transparent'%>
    <div/>

    <div class="form-group">
        <%= f.label :username, nil, :class => 'lead' %>
        <%= f.text_field :username, :class => 'form-control transparent' %>
    </div>
    <div class="form-group">
        <%= f.label :email, nil, :class => 'lead' %>
        <%= f.text_field :email, :class => 'form-control transparent' %>
    </div>
    <div class="form-group">
        <%= f.label :password, nil, :class => 'lead' %>
        <%= f.password_field :password, :class => 'form-control transparent' %>
    </div>
    <div class="form-group">
        <%= f.label :password_confirmation, nil, :class => 'lead' %>
        <%= f.password_field :password_confirmation, :class => 'form-control transparent' %>
    </div>
    <div class="form-group">
        <%= f.submit 'Register', :class => 'btn transparent' %>
        <div class ='btn transparent' id="login-btn">Log In</div>
    </div>
<% end %>
</div>
