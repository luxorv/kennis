            <div class="col-lg-8 col-lg-offset-2">
                <ul id="tutorials" class="list-inline list-unstyled">
                    <% @user.tutorials do |tutorial| %>
                        <li>
                            <a class="tutorial">
                                <img class="img-responsive img-thumbnail" src="">
                                <%= tutorial.title %>
                            </a>
                        </li>
                    <% end %>
                </ul>
            </div>
        </div>
    </section>

    <!-- Download Section -->
    <section id="download" class="content-section text-center">
        <div class="download-section">
            <div class="container">
                <div class="col-lg-8 col-lg-offset-2">
                    <ul id="badges" class="list-inline list-unstyled">
                    <% @user.badges do |badge| %>
                        <li>
                            <div class="badge">
                                <img class="img-responsive img-thumbnail" src=<%= badge.image_url %>/>
                                <%= badge.name %>
                            </div>
                        </li>
                    <% end %>
                </ul>
                </div>
            </div>
        </div>
